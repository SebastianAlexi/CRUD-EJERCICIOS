<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<% for( let i = 0; i < pv.length; i++ ) { %>
			<div class="col-12 col-sm-6 col-lg-3">
			
					<section class="product-box">
						<a href="/products/detail/<%= pv[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= pv[i].image %>?" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2><%= pv[i].price %></h2>
								<span><%= pv[i].discount %> % OFF</span>
								<p><%= pv[i].name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
			
				
			</div>
			<% } %>
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% for( let i = 0; i < pis.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/detail/<%= pis[i].id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= pis[i].image %>?" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2><%= pis[i].price %></h2>
									<span><%= pis[i].discount %> % OFF</span>
									<p><%= pis[i].name %></p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>	
				</div>
				<% } %>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>